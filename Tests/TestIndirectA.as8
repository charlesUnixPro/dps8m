    tsp2	ioa
    acc     /IR mods ...\r\n/

    lda     g, *n   " -1 => a
    sta     L1
    tsp2    ioa
    acc     "Should be ... 400000000001 is ^n\r\n"  " o-1
    nop     L1

    ldq    f, *dl   " &x => q
    stq     L1
    tsp2    ioa
    acc     "Should be ... ??? (this will move as x moves) is ^w\r\n"  "
    nop     L1

    eax4    13
    lda     c,  *1  " x+13 => -255 (400000000255) => a
    neg             " a = (377777777523)

    sta     L1
    tsp2    ioa
    acc     "Should be ... 377777777523 is ^n\r\n"  "
    nop     L1


    eax1    4
a:  lxl0    b,1*    " a + 5 => x0
    tra     here_2
b:  oct     111,222,333,444
    arg     bb, *ic
bb: arg     5, dl

here_2:

