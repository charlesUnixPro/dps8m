    entry  _main    " and we want to emtry TAM tests via TAM_main
    entry  _print

    segref	UtilsA, ioa 

    segdef  pi, E, fltTmp

        even
L1:     bss     1
L2:     bss     1

        even
LAQ:
LA:     bss     1
LQ:     bss     1

save2:      bss     ,2
save2p:     bss     ,2
