    ldq     L1
    lda     x,qu    " 3 => a
    staq    LAQ

    sta     L1
    tsp2    ioa
    acc     /Should be ... 3 is ^n\r\n/
    nop     L1

    ldaq    LAQ
    lda     y,ql    " y(-2) => a " 700

    sta     L1
    tsp2    ioa
    acc     /Should be ... 700 is ^n\r\n/
